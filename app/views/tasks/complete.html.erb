<h2>Tasks Complete:</h2>

<table class="table table-bordered">
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, edit_task_path(task), class: "btn btn-light" %></td>
        <td><%= task.description %></td>
        <td><%= link_to "Remove", task_path(task), class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
